{
  "manifest_version": 3,
  "name": "LinkedIn Easy Apply Assistant",
  "description": "Automates scanning and filling LinkedIn Easy Apply forms using saved profile data.",
  "version": "1.0.0",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_title": "Easy Apply Assistant",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
